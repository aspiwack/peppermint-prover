name:                refined-experiment
version:             0.1.0
synopsis:            An experiment on proof assistant design
description:         An experiment on proof assistant design
license:             BSD3
license-file:        LICENSE
author:              Arnaud Spiwack
maintainer:          arnaud@spiwack.net
copyright:           2019 Arnaud Spiwack
category:            Control
build-type:          Simple
extra-source-files:  README.md, ChangeLog.md
cabal-version:       >=1.10

executable refined-experiment
  main-is: Main.hs
  other-modules:
        CongruenceClosure,
        Refined,
        UnionFind
  build-depends:       base
                     , BNFC-meta
                     , array
                     , capability
                     , containers
                     , generic-lens
                     , lens
                     , lensy-f
                     , mtl
                     , prettyprinter
                     , prettyprinter-ansi-terminal
                     , unification-fd
  hs-source-dirs:      app
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall
